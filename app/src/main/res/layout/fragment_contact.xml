<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ContactFragment"
    android:background="#DCE8FF"
    android:id="@+id/contact_fragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:background="#226BF5" />



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:text="Contact"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="115dp"
            android:text="Want to talk to us directly?"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textColor="#D5D5E3"

            android:textSize="20dp" />

        <Button
            android:id="@+id/contact_button"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#FD9450"
            android:text="Connect with us"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="393dp"
            android:layout_height="455dp"
            android:layout_centerHorizontal="true"

            android:layout_marginLeft="24dp"
            android:layout_marginTop="235dp"
            android:background="@drawable/rounded_rec"
            android:backgroundTint="@color/white"
            android:paddingTop="25dp"
            android:text="Bengaluru Branch"
            android:textAlignment="center"
            android:textColor="#003399"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/location_contact"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_location"
            android:layout_marginTop="315dp"
            android:layout_marginLeft="200dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:paddingLeft="22dp"
            android:paddingTop="80dp"
            android:paddingRight="22dp"
            android:text="#405, Barton Center, MG Road, Bengaluru, Karnataka, India - 560001"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"

            android:textSize="20dp" />

        <ImageView
            android:id="@+id/call_contact"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="450dp"
            android:src="@drawable/ic_call"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:text="7259716255"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/email_contact"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_mail"
            android:layout_marginTop="555dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bangalore@kcoverseas.com"
            android:textSize="20dp"
            android:layout_marginTop="600dp"
            android:layout_centerHorizontal="true"/>




    </RelativeLayout>



</FrameLayout>